\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Plain Layout
\noindent
\align center
\begin_inset Graphics
	filename C:/Users/WB378870/OneDrive - WBG/S2S_RTM_guidelines/5.figures/weights_std_bb_gini.jpg
	lyxscale 25
